<div class="container" style="margin-top: 80px">
<h1 style="font-size:50px"><b>보낸 메일함입니다!</b></h1>
<br>

<table class="table">
  <thead>
    <tr>
      <th>No.</th>
      <th>제목</th>
      <th>내용</th>
      <th> </th>
      <th>시간</th>
      <th> </th>
    </tr>
  </thead>
  
  <% @every_post.each do |p| %>  
  <tbody>
    <tr>
      <th scope="row"><%= p.id %></th>
      <td><%= p.title %></td>
      <td rowspan="2"><%= p.content %></td>
      <td> </td>
      <td><%= p.created_at %></td>
      <td>
      <div class="btn-group" role="group" aria-label="...">
      <a href='/update_view/<%= p.id %>'><button type="button" class="btn btn-warning btn-xs">수정</button></a>
      <a href='/destroy/<%= p.id %>'><button type="button" class="btn btn-danger btn-xs">삭제</button></a>
      </div>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>



